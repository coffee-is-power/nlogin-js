{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "rootDir": "src/",
    "outDir": "dist/",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "declaration": true
  }
}
